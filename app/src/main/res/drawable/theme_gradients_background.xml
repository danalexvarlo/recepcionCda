<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <gradient
        android:startColor="@color/color_white"
        android:centerColor="@color/color_orange"
        android:endColor="@color/color_black"
        android:type="radial"
        android:gradientRadius="600dp"
        android:angle="45"
        android:centerX="45%">
    </gradient>

    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp">
    </padding>

    <stroke
        android:width="1dp"
        android:color="@color/color_black">
    </stroke>
</shape>