<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/formulario_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.fragments.FormularioFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbar_formulario"
            layout="@layout/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </include>

        <RelativeLayout
            android:id="@+id/tituloRecepcionista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stylo_borde_formulario">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="580dp"
                android:layout_marginBottom="10dp"
                android:text="Recepcionista:"
                android:textColor="@color/color_black"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/nombreRecepcionista"
                android:layout_width="630dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/color_black"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="9"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:background="@color/color_white">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="@color/color_white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp"
                    app:contentPadding="4dp">
                    <RelativeLayout
                        android:id="@+id/entradaLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:background="@drawable/stylo_borde_login">
                        <RelativeLayout
                            android:id="@+id/entradaRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/entradaCardView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Entrada:"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/color_black"></TextView>
                            <RadioButton
                                android:id="@+id/primeraVez"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Primera vez"
                                android:layout_marginLeft="100dp"
                                android:layout_marginTop="0dp"/>
                            <RadioButton
                                android:id="@+id/segundaVez"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Segunda vez"
                                android:layout_marginLeft="300dp"
                                android:layout_marginTop="0dp"/>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/datosConductorCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Datos del conductor"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_black"
                            android:layout_below="@+id/entradaRelativeLayout">
                        </TextView>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/datosConductorCard">

                            <!-- SE CREA UN EDIT TEXT PARA INGRESAR EL NOMBRE DEL CONDUCTOR -->
                            <TextView
                                android:id="@+id/nombreConductorCard"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginStart="180dp"
                                android:layout_marginEnd="400dp"
                                android:text="Nombre"
                                android:textSize="20dp"
                                android:textStyle="bold"></TextView>
                            <EditText
                                android:id="@+id/editNombreConductor"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="-430dp"
                                android:layout_toEndOf="@+id/nombreConductorCard"
                                android:background="@drawable/stylo_borde_login"
                                android:hint="Ingrese nombre"
                                android:textAlignment="center">
                            </EditText>

                            <!-- SE CREA UN EDIT TEXT PARA INGRESAR EL TIPO DE DOCUMENTO DEL CONDUCTOR -->
                            <TextView
                                android:id="@+id/tipoDocumentoConductor"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="Tipo documento"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_marginStart="180dp"
                                android:layout_marginEnd="440dp"
                                android:layout_below="@+id/nombreConductorCard"></TextView>
                            <EditText
                                android:id="@+id/editTipodoctConductor"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="330dp"
                                android:layout_marginTop="60dp"
                                android:background="@drawable/stylo_borde_login"
                                android:hint="Ingrese tipo documento"
                                android:textAlignment="center"></EditText>

                            <!-- SE CREA UN EDIT TEXT PARA INGRESAR EL DOCUMENTO DEL CONDUCTOR -->
                            <TextView
                                android:id="@+id/documentoConductor"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="Documento"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_marginStart="180dp"
                                android:layout_marginEnd="400dp"
                                android:layout_below="@+id/tipoDocumentoConductor"></TextView>
                            <EditText
                                android:id="@+id/editDocumentoConductor"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="330dp"
                                android:layout_marginTop="120dp"
                                android:background="@drawable/stylo_borde_login"
                                android:hint="Ingrese documento"
                                android:textAlignment="center"></EditText>

                            <!-- SE CREA UN EDIT TEXT PARA INGRESAR LA DIRECCION DEL CONDUCTOR -->
                            <TextView
                                android:id="@+id/direccionConductor"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="Dirección"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_marginStart="180dp"
                                android:layout_marginEnd="400dp"
                                android:layout_below="@+id/documentoConductor"></TextView>
                            <EditText
                                android:id="@+id/editDireccionConductor"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="330dp"
                                android:layout_marginTop="180dp"
                                android:background="@drawable/stylo_borde_login"
                                android:hint="Ingrese dirección"
                                android:textAlignment="center"></EditText>

                            <!-- SE CREA UN EDIT TEXT PARA INGRESAR EL TELÉFONO DEL CONDUCTOR -->
                            <TextView
                                android:id="@+id/telefonoConductor"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="Teléfono"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_marginStart="180dp"
                                android:layout_marginEnd="400dp"
                                android:layout_below="@+id/direccionConductor"></TextView>
                            <EditText
                                android:id="@+id/editTelefonoConductor"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="330dp"
                                android:layout_marginTop="240dp"
                                android:background="@drawable/stylo_borde_login"
                                android:hint="Ingrese teléfono"
                                android:textAlignment="center"></EditText>

                            <!-- SE CREA UN EDIT TEXT PARA INGRESAR EL CORREO DEL CONDUCTOR -->
                            <TextView
                                android:id="@+id/correoConductor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Correo electrónico"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_marginStart="180dp"
                                android:layout_marginEnd="420dp"
                                android:layout_below="@+id/telefonoConductor"></TextView>
                            <EditText
                                android:id="@+id/editCorreoConductor"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="330dp"
                                android:layout_marginTop="300dp"
                                android:background="@drawable/stylo_borde_login"
                                android:hint="Ingrese correo"
                                android:textAlignment="center"></EditText>
                        </RelativeLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <!-- CardView datos del vehiculo -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="@color/color_white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp"
                    app:contentPadding="4dp">
                    <RelativeLayout
                        android:id="@+id/vehiculoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:background="@drawable/stylo_borde_login">
                        <TextView
                            android:id="@+id/datosVehiculoTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Datos del vehiculo"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_black">
                        </TextView>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/datosVehiculoTitle">

                            <!-- SE CREA UN EDIT TEXT PARA INGRESAR LA PLACA DEL VEHICULO -->
                            <TextView
                                android:id="@+id/placaVehiculo"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginStart="180dp"
                                android:layout_marginEnd="400dp"
                                android:text="Placa"
                                android:textSize="20dp"
                                android:textStyle="bold">
                            </TextView>
                            <EditText
                                android:id="@+id/editPlacaVehiculo"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="-400dp"
                                android:layout_toEndOf="@+id/placaVehiculo"
                                android:background="@drawable/stylo_borde_login"
                                android:hint="Ingrese la placa"
                                android:textAlignment="center">
                            </EditText>

                            <!-- SE CREA UN EDIT TEXT PARA INGRESAR LA MARCA DEL VEHICULO -->
                            <TextView
                                android:id="@+id/marcaVehiculo"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="Marca"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_marginStart="180dp"
                                android:layout_marginEnd="440dp"
                                android:layout_below="@+id/placaVehiculo">
                            </TextView>
                            <EditText
                                android:id="@+id/editMarcaVehiculo"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="330dp"
                                android:layout_marginTop="60dp"
                                android:background="@drawable/stylo_borde_login"
                                android:hint="Ingrese la marca"
                                android:textAlignment="center">
                            </EditText>

                            <!-- SE CREA UN EDIT TEXT PARA INGRESAR EL MODELO DEL VEHICULO -->
                            <TextView
                                android:id="@+id/modeloVehiculo"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="Modelo"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_marginStart="180dp"
                                android:layout_marginEnd="400dp"
                                android:layout_below="@+id/marcaVehiculo">
                            </TextView>
                            <EditText
                                android:id="@+id/editModeloVehiculo"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="330dp"
                                android:layout_marginTop="120dp"
                                android:background="@drawable/stylo_borde_login"
                                android:hint="Ingrese el modelo"
                                android:textAlignment="center"></EditText>

                            <!-- SE CREA UN EDIT TEXT PARA INGRESAR EL COLOR DEL VEHICULO -->
                            <TextView
                                android:id="@+id/colorVehiculo"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="Color"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_marginStart="180dp"
                                android:layout_marginEnd="400dp"
                                android:layout_below="@+id/modeloVehiculo">
                            </TextView>
                            <EditText
                                android:id="@+id/editColorVehiculo"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="330dp"
                                android:layout_marginTop="180dp"
                                android:background="@drawable/stylo_borde_login"
                                android:hint="Ingrese el color"
                                android:textAlignment="center"></EditText>

                            <!-- SE CREA UN EDIT TEXT PARA INGRESAR EL KILOMETRAJE DEL VEHICULO -->
                            <TextView
                                android:id="@+id/kilometrajeVehiculo"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="Kilometraje"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_marginStart="180dp"
                                android:layout_marginEnd="400dp"
                                android:layout_below="@+id/colorVehiculo"></TextView>
                            <EditText
                                android:id="@+id/editKilometraje"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="330dp"
                                android:layout_marginTop="240dp"
                                android:background="@drawable/stylo_borde_login"
                                android:hint="Ingrese el kilometraje"
                                android:textAlignment="center">
                            </EditText>

                            <!-- SE CREA UN SPINNER PARA INGRESAR LA CLASE DEL VEHICULO -->
                            <TextView
                                android:id="@+id/claseVehiculo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Clase vehiculo"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_marginStart="180dp"
                                android:layout_marginEnd="420dp"
                                android:layout_below="@+id/kilometrajeVehiculo">
                            </TextView>
                            <Spinner
                                android:id="@+id/spinnerClaseVehiculo"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="330dp"
                                android:layout_below="@+id/kilometrajeVehiculo"
                                android:layout_row="6"
                                android:layout_column="1" />
                        </RelativeLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </ScrollView>
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:menu="@menu/menu_navigation_bar"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>