<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_ingreso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".view.ui.fragments.IngresoFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbar_ingreso"
            layout="@layout/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </include>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Recepcionista: "
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:layout_marginEnd="580dp">
        </TextView>
        <TextView
            android:id="@+id/nombreRecepcionistaIngreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="NOMBRE DEL RECEPCIONISTA"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:layout_marginStart="210dp"
            android:layout_marginEnd="100dp">
        </TextView>
    </RelativeLayout>
    <TextView
        android:id="@+id/condicionesInspeccionIngreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="CONDICIONES DE LA INSPECCION"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/color_black"
        android:layout_marginStart="180dp"
        android:layout_marginEnd="100dp">
    </TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/stylo_borde_formulario">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/condiciones_de_ingreso"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:textSize="20dp">
        </TextView>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/siguienteCondicionesButton"
        android:layout_marginTop="1120dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:text="Siguiente"
        android:textSize="40dp"
        android:textStyle="bold">
    </Button>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:menu="@menu/menu_navigation_bar"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>