<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayoutFirmas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.fragments.FirmaFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbar_ingreso"
            layout="@layout/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </include>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Recepcionista: "
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:layout_marginEnd="580dp">
        </TextView>
        <TextView
            android:id="@+id/nombreRecepcionistaFirmas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="NOMBRE DEL RECEPCIONISTA"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:layout_marginStart="210dp"
            android:layout_marginEnd="100dp">
        </TextView>
    </RelativeLayout>
    <TextView
        android:id="@+id/avisoPrivacidadTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AVISO DE PRIVACIDAD"
        android:layout_marginTop="150dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/color_black">
    </TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="750dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/stylo_borde_formulario">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/color_black"
            android:text="@string/aviso_privacidad">
        </TextView>
    </ScrollView>
    <TextView
        android:id="@+id/textViewFirmaUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:textSize="30dp"
        android:textColor="@color/color_black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Firma de aceptación de los términos y condiciones de la aceptación del servicio:">
    </TextView>
    <RelativeLayout
        android:id="@+id/firmaUnoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stylo_borde_formulario"
        android:layout_marginTop="560dp"
        android:layout_marginBottom="540dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        <com.example.recepcioncda.view.ui.models.SignatureView
            android:id="@+id/signature_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="750dp"
        android:text="Firma de aceptación del cliente que recibe copia
                      del formato uniforme de resultados."
        android:textSize="30dp"
        android:textColor="@color/color_black"
        android:textStyle="bold"
        android:textAlignment="center">
    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stylo_borde_formulario"
        android:layout_marginTop="850dp"
        android:layout_marginBottom="250dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        <com.example.recepcioncda.view.ui.models.SignatureView
            android:id="@+id/signature_view_dos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stylo_borde_login"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1000dp"
        android:layout_marginBottom="50dp">
        <Button
            android:id="@+id/corregirFirmaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Corregir"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginEnd="200dp"
            android:layout_marginStart="200dp">
        </Button>
        <Button
            android:id="@+id/guardarDatosButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar datos"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/corregirFirmaButton"
            android:layout_marginEnd="200dp"
            android:layout_marginStart="200dp">
        </Button>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:menu="@menu/menu_navigation_bar"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>