<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/motosFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.fragments.MotosFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbar_moto"
            layout="@layout/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </include>
    </RelativeLayout>
    <!-- _____________________________________ -->
    <RelativeLayout
        android:id="@+id/nombreRecepcionistaLayoutLiviano"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="1150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stylo_borde_formulario">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recepcionista: "
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginEnd="580dp">
        </TextView>
        <TextView
            android:id="@+id/nombreRecepcionistaLiviano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginStart="210dp"
            android:layout_marginEnd="300dp">
        </TextView>
    </RelativeLayout>
    <!-- Layout para ingresar las presiones de la moto -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp">
        <TextView
            android:id="@+id/medicionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medición de presión de aire de las llantas"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="0dp">
        </TextView>
        <!-- Eje delantero -->
        <TextView
            android:id="@+id/ejeDelanteroText"
            android:layout_below="@+id/medicionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EJE 1 DELANTERO PSI"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="50dp">
        </TextView>
        <TextView
            android:id="@+id/delanteraText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Llanta Delantera"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/stylo_borde_presiones"
            android:layout_below="@+id/ejeDelanteroText"
            android:layout_marginTop="100dp"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="300dp">
        </TextView>
        <EditText
            android:id="@+id/delanteraEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Psi"
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_below="@+id/delanteraText"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="300dp"
            android:background="@drawable/stylo_borde_presiones">
        </EditText>
        <!-- Eje trasero -->
        <TextView
            android:id="@+id/ejeTraseroText"
            android:layout_below="@+id/delanteraEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EJE 2 TRASERO PSI"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="100dp">
        </TextView>
        <TextView
            android:id="@+id/traseraText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Llanta trasera"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/stylo_borde_presiones"
            android:layout_below="@+id/ejeTraseroText"
            android:layout_marginTop="100dp"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="300dp">
        </TextView>
        <EditText
            android:id="@+id/traseraEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Psi"
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_below="@+id/traseraText"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="300dp"
            android:background="@drawable/stylo_borde_presiones">
        </EditText>

        <Button
            android:id="@+id/siguientePresionesLivianoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/traseraEdit"
            android:layout_marginTop="80dp"
            android:layout_marginStart="200dp"
            android:layout_marginEnd="200dp">
        </Button>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/menu_navigation_bar"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>