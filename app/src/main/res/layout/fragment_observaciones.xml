<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerObservaciones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.fragments.ObservacionesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbar_observaciones"
            layout="@layout/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </include>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Recepcionista: "
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:layout_marginEnd="580dp">
        </TextView>
        <TextView
            android:id="@+id/nombreRecepcionistaObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="NOMBRE DEL RECEPCIONISTA"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:layout_marginStart="210dp"
            android:layout_marginEnd="100dp">
        </TextView>
    </RelativeLayout>
    <EditText
        android:id="@+id/editObservaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/stylo_borde_formulario"
        android:hint="Observaciones"
        android:textColor="@color/color_black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="50dp">
    </EditText>
    <Button
        android:id="@+id/observacionesSiguienteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1100dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:text="Siguiente"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/color_black"></Button>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:menu="@menu/menu_navigation_bar"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>